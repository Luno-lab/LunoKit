{
  "name": "luno",
  "description": "The Luno monorepo containing core, react, and other related packages.",
  "private": true,
  "scripts": {
    "build": "pnpm -r --stream --filter './packages/**' run build",
    "clean": "pnpm --filter './packages/**' run clean",
    "dev": "pnpm --filter './packages/**' dev",
    "lint": "pnpm --filter './packages/**' lint",
    "test": "pnpm --filter './packages/**' test",
    "changeset": "changeset",
    "publish-packages": "pnpm build && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.2",
    "eslint": "^8.56.0",
    "react": "^18.2.0",
    "tsup": "^8.0.2",
    "typescript": "^5.3.3",
    "vitest": "^1.1.3"
  },
  "packageManager": "pnpm@10.11.0",
  "engines": {
    "node": ">=16.0.0",
    "pnpm": ">=8.0.0"
  },
  "pnpm": {
    "overrides": {
      "@polkadot/extension-dapp": "0.58.8",
      "@polkadot/extension-inject": "0.58.8"
    }
  }
}
