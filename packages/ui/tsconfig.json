{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "jsx": "react-jsx",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["src/**/*"],
  "references": [
    { "path": "../react" }
  ],
  "exclude": ["node_modules", "dist"],
  "composite": true
}
