{
  "name": "@luno-kit/ui",
  "version": "0.0.1",
  "description": "UI components for Luno, a Polkadot frontend toolkit.",
  "keywords": [
    "polkadot",
    "substrate",
    "react",
    "ui",
    "components",
    "luno"
  ],
  "homepage": "https://github.com/Luno-lab/LunoKit",
  "bugs": {
    "url": "https://github.com/Luno-lab/LunoKit/issues"
  },
  "license": "MIT",
  "sideEffects": [
    "**/*.css"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm build:js && pnpm build:css",
    "build:css": "pnpm exec tailwindcss -i ./src/styles/styles.css -o ./dist/styles.css --minify",
    "build:js": "tsup",
    "dev": "concurrently \"pnpm:dev:css\" \"pnpm:dev:js\"",
    "dev:css": "pnpm exec tailwindcss -i ./src/styles/styles.css -o ./dist/styles.css --watch",
    "dev:js": "tsup --watch",
    "clean": "rm -rf dist",
    "svgr": "svgr --typescript --icon --out-dir src/assets/icons src/assets"
  },
  "peerDependencies": {
    "@tanstack/react-query": ">=5.0.0",
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0",
    "@luno-kit/react": "workspace:*"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.0.5",
    "clsx": "^2.1.0",
    "tailwind-merge": "^2.2.1"
  },
  "devDependencies": {
    "@luno-kit/react": "workspace:*",
    "@svgr/cli": "8.1.0",
    "@tailwindcss/cli": "^4.0.0",
    "@tailwindcss/postcss": "^4.0.0",
    "@tanstack/react-query": "^5.14.2",
    "@types/node": "22.15.21",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "postcss": "^8.4.35",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "storybook": "^8.0.0",
    "tailwindcss": "^4.1.7",
    "tsup": "^8.0.2",
    "typescript": "^5.3.3",
    "vite": "^5.1.4"
  },
  "publishConfig": {
    "access": "public"
  }
}
