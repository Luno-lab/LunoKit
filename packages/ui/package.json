{
  "name": "@luno-kit/ui",
  "version": "0.0.12-beta.1",
  "description": "UI components for Luno, a Polkadot frontend toolkit.",
  "keywords": [
    "polkadot",
    "substrate",
    "react",
    "ui",
    "components",
    "luno-lab",
    "luno-kit"
  ],
  "type": "module",
  "homepage": "https://github.com/Luno-lab/LunoKit",
  "bugs": {
    "url": "https://github.com/Luno-lab/LunoKit/issues"
  },
  "license": "MIT",
  "sideEffects": [
    "**/*.css"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./styles.css": "./dist/styles.css"
  },
  "scripts": {
    "build": "pnpm build:js && pnpm build:css",
    "build:css": "pnpm exec tailwindcss -i ./src/styles/styles.css -o ./dist/styles.css --minify",
    "build:js": "tsup",
    "dev": "concurrently \"pnpm:dev:css\" \"pnpm:dev:js\"",
    "dev:css": "pnpm exec tailwindcss -i ./src/styles/styles.css -o ./dist/styles.css --watch",
    "dev:js": "tsup --watch",
    "clean": "rm -rf dist",
    "svgr": "svgr --typescript --icon --out-dir src/assets/icons src/assets"
  },
  "peerDependencies": {
    "@luno-kit/react": "workspace:*",
    "@tanstack/react-query": ">=5.0.0",
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.0.5",
    "clsx": "^2.1.0",
    "cuer": "0.0.2",
    "tailwind-merge": "^2.2.1"
  },
  "devDependencies": {
    "@luno-kit/react": "workspace:*",
    "@svgr/cli": "8.1.0",
    "@tailwindcss/cli": "^4.0.0",
    "@tailwindcss/postcss": "^4.0.0",
    "@tanstack/react-query": "catalog:",
    "@types/node": "22.15.21",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "postcss": "^8.4.35",
    "react": "catalog:",
    "react-dom": "catalog:",
    "storybook": "^8.0.0",
    "tailwindcss": "^4.1.7",
    "tsup": "catalog:",
    "typescript": "^5.3.3",
    "vitest": "^3.2.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Luno-lab/LunoKit.git",
    "directory": "packages/ui"
  }
}
