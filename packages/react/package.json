{
  "name": "@poma/react",
  "description": "React Hooks and Provider for Poma, enabling easy Polkadot wallet interactions in React applications.",
  "version": "0.0.1",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "!dist/**/*.test.js",
    "!dist/**/*.test.d.ts"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint src",
    "test": "vitest",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@poma/core": "workspace:*",
    "@tanstack/react-query": "^5.14.2"
  },
  "devDependencies": {
    "@types/node": "^18.11.18",
    "@types/react": "^18.2.45",
    "eslint": "^8.56.0",
    "react": "^18.2.0",
    "tsup": "^8.0.2",
    "typescript": "^5.3.3",
    "vitest": "^1.1.3"
  },
  "peerDependencies": {
    "@tanstack/react-query": ">=5.0.0",
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  }
}
