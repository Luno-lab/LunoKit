{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "jsx": "react-jsx",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "composite": true,
    "paths": {
      "@luno-kit/core/*": ["../core/src/*"]
    }
  },
  "include": ["src/**/*"],
  "references": [
    { "path": "../core" }
  ],
  "types": ["vitest/globals", "@testing-library/jest-dom"]
}
